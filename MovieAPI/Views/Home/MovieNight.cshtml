@{
}

@if (Model == null)
{


    <form method="post" asp-action="MovieNight">
        <div>
            <p>Enter the Title keyword to find the movies</p>
            <div>
                <label for="Title1">Title 1</label>
                <input name="Title1" id="Title1" />
            </div>
            <div>
                <label for="Title2">Title 2</label>
                <input name="Title2" id="Title2" />
            </div>
            <div>
                <label for="Title3">Title 3</label>
                <input name="Title3" id="Title3" />
            </div>

            <input type="submit" />
        </div>

    </form>
}
else
{
    @foreach (MovieModel movies in Model)
    {
        <h3>@movies.Title</h3>
        <img src="@movies.Poster"  />
    }
}


